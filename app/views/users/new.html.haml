%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @user, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-6" do |f|
        %header
          %h1 Register
        %fieldset
          .form-group
            .row
              = f.text_field :email, label: "Email Address", class: "form-control"
          .form-group
            .row
              = f.password_field :password, label: "Password", class: "form-control"
          .form-group
            .row
              = f.text_field :full_name, label: "Full Name", class: "form-control"
          = hidden_field_tag :invitation_token, @invitation_token
        %fieldset.actions.control-group.col-sm-offset-2
          .controls
            = f.submit "Sign Up", class: "btn btn-default"